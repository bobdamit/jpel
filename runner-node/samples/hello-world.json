{
	"id": "hello-world",
	"name": "Hello World Process",
	"description": "A simple greeting process demonstrating human tasks and compute activities",
	"version": "1.0.0",
	"start": "a:getUserName",
	"variables": [
		{
			"name": "greeting",
			"type": "text",
			"description": "The generated greeting message"
		}
	],
	"activities": {
		"getUserName": {
			"name": "Get User Name",
			"type": "human",
			"prompt": "Welcome! Please tell us your name:",
			"inputs": [
				{
					"name": "userName",
					"type": "text",
					"label": "Your Name",
					"required": true,
					"placeholder": "Enter your full name"
				}
			]
		},
		"generateGreeting": {
			"name": "Generate Greeting",
			"type": "compute",
			"code": [
				"// Get the user name from the previous activity",
				"const userName = getValue('a:getUserName.f:userName');",
				"// Generate a greeting",
				"const greeting = `Hello, ${userName}! Welcome to JPEL!`;",
				"// Store the greeting",
				"v:greeting = greeting;"
			]
		},
		"end": {
			"name": "Process Complete",
			"type": "terminate",
			"reason": "Process completed successfully"
		}
	}
}