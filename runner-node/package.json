{
  "name": "jpel-runner",
  "version": "1.0.0",
  "description": "JPEL Process Execution Engine - Node.js TypeScript runner",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node-dev src/index.ts",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest --config ./jest.config.cjs",
    "test:watch": "jest --config ./jest.config.cjs --watch",
    "test:coverage": "jest --config ./jest.config.cjs --coverage",
    "demo": "node demo.js",
    "build:schema": "node scripts/bundle-schema.js"
  },
  "keywords": [
    "jpel",
    "bpel",
    "workflow",
    "process",
    "automation"
  ],
  "author": "JPEL Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.6",
    "express": "5.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "multer": "^2.0.2",
    "pino": "^10.2.1",
    "uuid": "^13.0.0"
  },
  "dependenciesMeta": {
    "pino": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.9",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.3",
    "rimraf": "^6.1.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "ajv": "^8.12.0",
    "js-yaml": "^4.1.1",
    "@types/js-yaml": "^4.0.5",
    "@apidevtools/json-schema-ref-parser": "^15.2.1"
  }
}
